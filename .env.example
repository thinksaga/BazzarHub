# ============ Server Configuration ============
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_BASE_URL=http://localhost:3000

# ============ Database Configuration ============
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bazaarhub
DB_USER=bazaarhub
DB_PASSWORD=secure_password
DATABASE_URL=postgresql://bazaarhub:secure_password@postgres:5432/bazaarhub
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_SSL=false

# ============ Redis Configuration ============
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@redis:6379
CACHE_TTL=86400
SESSION_TTL=604800

# ============ Elasticsearch Configuration ============
ELASTICSEARCH_NODE=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic_password
ES_INDEX_PREFIX=bazaarhub
ENABLE_SEARCH=true

# ============ JWT & Security ============
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-cbc

# ============ Razorpay Configuration ============
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=rzp_test_your_key_secret
RAZORPAY_WEBHOOK_SECRET=razorpay_webhook_secret
DEFAULT_COMMISSION_RATE=2.5

# ============ AWS S3 Configuration ============
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=bazaarhub-products
AWS_S3_KYC_BUCKET=bazaarhub-kyc
AWS_S3_REGION=ap-south-1
S3_SIGNED_URL_EXPIRY=3600

# ============ Email Configuration ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@bazaarhub.com
SMTP_FROM_NAME=BazaarHub

# ============ SMS Configuration ============
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890
OTP_EXPIRY_MINUTES=10

# ============ Payment Configuration ============
DEFAULT_COMMISSION_PERCENTAGE=2.5
TDS_ENABLED=true
TDS_PERCENTAGE_WITH_PAN=1.0
TDS_PERCENTAGE_WITHOUT_PAN=5.0
COD_ENABLED=true
PAYMENT_GATEWAY=razorpay

# ============ Shipping Configuration ============
SHIPROCKET_API_KEY=your_shiprocket_api_key
SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in
SHIPROCKET_CLIENT_CODE=your_client_code
COD_ELIGIBLE_PINCODES=

# ============ Logging Configuration ============
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
WINSTON_MAX_SIZE=10m
WINSTON_MAX_FILES=14

# ============ Monitoring & Observability ============
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACE_SAMPLE_RATE=0.1

PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

APM_ENABLED=false
APM_SERVICE_NAME=bazaarhub-backend
APM_SERVER_URL=http://apm-server:8200

# ============ Feature Flags ============
GST_ENABLED=true
TDS_ENABLED=true
COD_ENABLED=true
AFFILIATE_ENABLED=false
SUBSCRIPTION_ENABLED=false

# ============ Vendor Configuration ============
MIN_PASSWORD_LENGTH=12
PASSWORD_REQUIRES_SPECIAL_CHARS=true
PASSWORD_REQUIRES_UPPERCASE=true
PASSWORD_REQUIRES_NUMBERS=true
VENDOR_VERIFICATION_REQUIRED=true
AUTOMATIC_COMMISSION_CALCULATION=true

# ============ Admin Configuration ============
ADMIN_EMAIL=admin@bazaarhub.com
ADMIN_PASSWORD=ChangeMe123!@#
ADMIN_PHONE=9876543210

# ============ CORS Configuration ============
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
CORS_CREDENTIALS=true

# ============ Security Configuration ============
HTTPS_ONLY=false
SECURE_COOKIES=true
COOKIE_SAME_SITE=lax
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# ============ File Upload Configuration ============
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,csv,xlsx
UPLOAD_DIRECTORY=/tmp/uploads

# ============ Timezone ============
TIMEZONE=Asia/Kolkata

# ============ Cron Jobs ============
PAYOUT_SCHEDULE=0 0 * * 0
COMMISSION_CALCULATION_SCHEDULE=0 1 * * 0
INVENTORY_SYNC_SCHEDULE=*/30 * * * *
ELASTICSEARCH_REINDEX_SCHEDULE=0 2 * * 0
